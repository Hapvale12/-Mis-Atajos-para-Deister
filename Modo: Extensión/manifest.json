{
  "manifest_version": 3,
  "name": "Mis Atajos para Deister",
  "version": "4.0",
  "description": "Atajos de teclado optimizados para Deister, con observadores de DOM y una estructura m√°s robusta.",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/os/jobstool*",
        "*://*/os/dbstudio*",
        "*://next.mydeister.com/*",
        "*://next2.mydeister.com/*",
        "*://next3.mydeister.com/*",
        "*://heracles-next.mydeister.com/*",
        "http://192.168.100.52:8085/*",
        "https://192.168.100.52:8085/*"
      ],
      "js": ["Script for vNext.js"]
    }
  ],
  "action": {
    "default_title": "Mis Atajos para Deister",
    "default_popup": "popup.html"
  }
}